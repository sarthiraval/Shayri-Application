<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="850dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="214dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/lovebtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="#FFFFFF"
                    android:contentDescription="lovebutton"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:scaleType="fitXY"

                    app:srcCompat="@drawable/lovexml" />

                <TextView
                    android:id="@+id/lovetxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center"

                    android:text="@string/love_shayari" />


                <ImageButton
                    android:id="@+id/friendshipbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="#FFFFFF"
                    android:contentDescription="friendshipbutton"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:scaleType="fitXY"


                    app:srcCompat="@drawable/friendshipxml" />


                <TextView
                    android:id="@+id/friendshiptxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="Friendship Shayari" />

                <ImageButton
                    android:id="@+id/bewafabtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:contentDescription="bewafabutton"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:scaleType="fitXY"


                    app:srcCompat="@drawable/bewafaxml" />

                <TextView
                    android:id="@+id/bewafatxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"

                    android:gravity="center"
                    android:text="@string/bewafa_shayari" />


                <ImageButton
                    android:id="@+id/ishq"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ishq" />

                <TextView
                    android:id="@+id/ishqtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="Ishq Shayari" />
                <ImageButton
                    android:id="@+id/sad"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/sad" />

                <TextView
                    android:id="@+id/sadtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="Sad Shayari" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/sorrybtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="#FFFFFF"
                    android:contentDescription="sorrybutton"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:scaleType="fitXY"

                    app:srcCompat="@drawable/sorryxml" />

                <TextView
                    android:id="@+id/sorrytxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"

                    android:gravity="center"
                    android:text="@string/sorry_shayari" />

                <ImageButton
                    android:id="@+id/comedybtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="#FFFFFF"
                    android:contentDescription="comedybutton"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:scaleType="fitXY"


                    app:srcCompat="@drawable/comedyxml" />

                <TextView
                    android:id="@+id/comedytxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="@string/comedy_shayari" />

                <ImageButton
                    android:id="@+id/deshbhaktibtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="#FFFFFF"
                    android:contentDescription="deshbhaktibutton"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:scaleType="fitXY"


                    app:srcCompat="@drawable/indiaxml" />

                <TextView
                    android:id="@+id/deshbhaktitxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="Deshbhakti Shayari" />


                <ImageButton
                    android:id="@+id/diwali"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/diwali" />

                <TextView
                    android:id="@+id/diwalitext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="Diwali Shayari" />
                <ImageButton
                    android:id="@+id/birthedat"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/cake" />

                <TextView
                    android:id="@+id/biethdaytext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="Birthday Shayari" />

            </LinearLayout>

        </LinearLayout>



            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                ads:adSize="SMART_BANNER"
                ads:adUnitId="@string/banner" />





    </LinearLayout>
    </ScrollView>



    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/header"
        >

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>

